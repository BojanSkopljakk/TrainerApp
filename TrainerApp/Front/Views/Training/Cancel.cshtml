@model TrainerApp.Data.CancelTrainingDto
@{
    ViewData["Title"] = "Cancel Training";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title mb-4 text-center">Cancel a Training Session</h3>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success">@ViewBag.Success</div>
                    }

                    <form asp-action="Cancel" method="post">
                        <div class="mb-3">
                            <label class="form-label">Phone Number</label>
                            <input name="PhoneNumber" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Date</label>
                            <input name="DatePart" type="date" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Time</label>
                            <select name="TimePart" class="form-select" required>
                                @{
                                    for (int hour = 0; hour < 24; hour++)
                                    {
                                        <option value="@($"{hour:D2}:00")">@($"{hour:D2}:00")</option>
                                        <option value="@($"{hour:D2}:30")">@($"{hour:D2}:30")</option>
                                    }
                                }
                            </select>
                        </div>

                        <button type="submit" class="btn btn-danger w-100">Cancel Session</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
