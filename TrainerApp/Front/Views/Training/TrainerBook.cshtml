@{
    ViewData["Title"] = "Trainer Booking";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title mb-4 text-center">Trainer: Book Session</h3>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success">@ViewBag.Success</div>
                    }

                    <form asp-action="TrainerBook" method="post">
                        <div class="mb-3">
                            <label>Trainer Access Code</label>
                            <input name="AccessCode" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label>User Full Name</label>
                            <input name="FullName" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label>User Phone Number</label>
                            <input name="PhoneNumber" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label>Date</label>
                            <input name="DatePart" type="date" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label>Time</label>
                            <select name="TimePart" class="form-select" required>
                                @{
                                    for (int h = 0; h < 24; h++)
                                    {
                                        <option value="@($"{h:D2}:00")">@($"{h:D2}:00")</option>
                                        <option value="@($"{h:D2}:30")">@($"{h:D2}:30")</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label>Duration</label>
                            <select name="DurationMinutes" class="form-select" required>
                                <option value="30">30 minutes</option>
                                <option value="60">60 minutes</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Book Session</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
